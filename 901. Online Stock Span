class StockSpanner {
    public:
        stack<pair<int,int>> stk;
        StockSpanner() {
        }
        
        int next(int price) {
            int cnt = 1;
            while(!stk.empty() && stk.top().first<=price){
                cnt += stk.top().second;
                stk.pop();
            }
            stk.push({price,cnt});
            return stk.top().second;
        }
    };
